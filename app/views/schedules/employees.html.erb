<h1 class="employee-name">Empleados</h1>
<table class="table is-fullwidth is-hoverable is-bordered schedule-table small-table">
  <tr>
  	<th>Nombre</th>
  	<th class="td-center">Curso IMSS</th>
    <th class="td-center">Vulnerable</th>
  	<th class="td-center">Acceso Ilimitado</th>
  </tr>
  
  <% @employees.each do |e| %>
    <%
      check_course = e.course ? 'checked' : ''
      check_unlimited = e.unlimited ? 'checked' : ''
      check_vulnerable = e.vulnerable ? 'checked' : ''
    %>
    <tr>
      <td><%= e.last_name %> <%= e.first_name %></td>
      <td class="td-center"><input type="checkbox" class="check-course" data-user-id="<%= e.id %>" <%=check_course %>></td>
      <td class="td-center"><input type="checkbox" class="check-vulnerable" data-user-id="<%= e.id %>" <%= check_vulnerable %>></td>
      <td class="td-center"><input type="checkbox" class="check-unlimited" data-user-id="<%= e.id %>" <%= check_unlimited %>></td>
    </tr>
  <% end %>
</table>

