<h1 class="department-name">Registro de salidas</h1><br>
<% if @schedules.count > 0 %>
<table class="table is-fullwidth is-hoverable is-bordered schedule-table small-table">
  <tr>
  	<th></th>
    <th></th>
  	<th>Nombre</th>
  	<th>Fecha</th>
  	<th>Motivo</th>
  	<th>Autorizó</th>
  	<th class="td-center"><span title="Temperatura">Temp.</span></th>
  	<th class="td-center">Entrada</th>
  	<th class="td-center">Salida</th>
  </tr>
  
  <% @schedules.each do |s| %>
    <tr>
      <td>
        <% if s.passed.nil? %>
          <span class="icon has-text-warning"><i class="fas fa-exclamation"></i></span>
        <% elsif s.passed %>
          <span class="icon has-text-success"><i class="fas fa-check"></i></span>
        <% else %>
          <span class="icon has-text-danger"><i class="fas fa-times"></i></span>
        <% end %>
      </td>
      <td class="td-img td-center"><img class="is-rounded" src="<%= s.user.display_url %>"></td>
      <td><%= s.user.fullname %></td>
      <td>
      	
      	<% if s.h1 && s.h2 
    	  	hours = "todo el día"
    	  elsif s.h1 && !s.h2 
    	  	hours = "8:00 a 13:30"
    	  else
    	    hours = "14:30 a 20:00"
    	  end	
        %>
        <%= l s.work_date.to_date, format: "%A %d de %B" %>, <%= hours %>
      </td>
      <td><%= s.notes %></td>
      <td><%= s.authorized_by.first_name %> <%= s.authorized_by.last_name %></td>
      <td class="td-center"><%= s.temperature %></td>
      <td class="td-center"><%= l s.in.to_datetime, format: "%H:%M" rescue '--' %></td>
      <td class="td-center"><a href="/registro/salida/<%= s.id %>" class="button is-danger" >Dar salida</a></td>
    </tr>
  <% end %>
</table>
<% else %>
<div class="not-today">
  No hay salidas pendientes
</div>
<% end %>