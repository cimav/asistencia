<h1 class="department-name">Registro de entradas</h1><br>
<% if @schedules.count > 0 %>

<table class="table is-fullwidth is-hoverable is-bordered schedule-table small-table">  
  <% @schedules.each do |s| %>
    <tr>
      <td class="td-img td-center"><img class="is-rounded" src="<%= s.user.display_url %>"></td>
      <td>
      <strong><%= s.user.fullname %></strong><br>
      	<% if s.h1 && s.h2 
    	  	hours = "Todo el dÃ­a"
    	  elsif s.h1 && !s.h2 
    	  	hours = "De 8:00 a 13:30"
    	  else
    	    hours = "De 14:30 a 20:00"
    	  end	
        %>
      Horario:  <%= hours %><br>
      Notas: <%= s.notes %><br>
      Autorizado por: <%= s.authorized_by.first_name %> <%= s.authorized_by.last_name %>
      </td>
      <td class="td-center"><a href="/registro/entrada/<%= s.id %>" class="button is-success" >Dar Entrada</a></td>
    </tr>
  <% end %>

</table>
<% else %>
<div class="not-today">
  No hay entradas pendientes
</div>
<% end %>